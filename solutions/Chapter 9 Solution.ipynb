  {
   "cell_type": "raw",
   "metadata": {},
   "source": [
    "def pig_say(text):\n",
    "    \"\"\"Generate a picture of a pig saying something\"\"\"\n",
    "    text_length = len(text)\n",
    "    print(' {}'.format('_' * text_length))\n",
    "    print(' < {} >'.format(text))\n",
    "    print(' {}'.format('-' * text_length))\n",
    "    print('       /')\n",
    "    print(' ^..^ /')\n",
    "    print('~( ( oo )')\n",
    "    print(' ,, ,,')\n",
    "\n",
    "def main():\n",
    "    text = input('What would you like the pig to say? ')\n",
    "    pig_say(text)\n",
    "\n",
    "if __name__ == '__main__':\n",
    " main()"
   ]
